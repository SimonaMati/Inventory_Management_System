<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
    tools:context=".Add_New_Room_Activity4">

    <TextView
        android:id="@+id/top_grey_block"
        android:layout_width="414dp"
        android:layout_height="71dp"
        android:layout_marginTop="16dp"
        android:background="@color/grey_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bhcc_logo"
        android:layout_width="186dp"
        android:layout_height="51dp"
        android:src="@drawable/bhcc_logo"
        app:layout_constraintBottom_toBottomOf="@+id/top_grey_block"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.071"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/top_grey_block" />

    <ImageView
        android:id="@+id/person_icon"
        android:layout_width="48dp"
        android:layout_height="45dp"
        android:src="@drawable/person_24"
        app:layout_constraintBottom_toBottomOf="@+id/top_grey_block"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.79"
        app:layout_constraintStart_toEndOf="@+id/bhcc_logo"
        app:layout_constraintTop_toTopOf="@+id/top_grey_block"
        app:layout_constraintVertical_bias="0.047" />

    <TextView
        android:id="@+id/users_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/top_grey_block"
        app:layout_constraintEnd_toEndOf="@+id/top_grey_block"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toEndOf="@+id/bhcc_logo"
        app:layout_constraintTop_toBottomOf="@+id/person_icon"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Add a new Item"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_grey_block" />

    <ImageView
        android:id="@+id/picture_image"
        android:layout_width="420dp"
        android:layout_height="550dp"
        android:src="@drawable/background4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.127" />

